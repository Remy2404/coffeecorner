<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ApsaraAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/color_03</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/color_04</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text appearance defaults -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.CoffeeShop.Heading1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.CoffeeShop.Heading2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.CoffeeShop.Heading3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.CoffeeShop.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.CoffeeShop.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.CoffeeShop.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.CoffeeShop.Caption</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.CoffeeShop.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.CoffeeShop.Subtitle2</item>
        
        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor">@color/color_01</item>
        <item name="android:navigationBarColor">@color/surface</item>
    </style>

    <style name="Theme.ApsaraAndroid" parent="Base.Theme.ApsaraAndroid" />
    
    <!-- NoActionBar theme for splash screen and other full-screen activities -->
    <style name="Theme.ApsaraAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.CoffeeShop.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.CoffeeShop.Button</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
    
    <style name="Widget.CoffeeShop.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.CoffeeShop.Button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">16dp</item>
    </style>
    
    <style name="Widget.CoffeeShop.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.CoffeeShop.Button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/secondary</item>
    </style>
</resources>