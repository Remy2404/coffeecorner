<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Coffee Shop Text Appearances -->
    
    <!-- Heading Styles -->
    <style name="TextAppearance.CoffeeShop.Heading1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.CoffeeShop.Heading2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="TextAppearance.CoffeeShop.Heading3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <!-- Body Text Styles -->
    <style name="TextAppearance.CoffeeShop.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.CoffeeShop.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <!-- Button Text Style -->
    <style name="TextAppearance.CoffeeShop.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Caption Text Style -->
    <style name="TextAppearance.CoffeeShop.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Subtitle Styles -->
    <style name="TextAppearance.CoffeeShop.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.CoffeeShop.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Additional Specific Text Appearances for Coffee Shop -->
    <style name="TextAppearance.CoffeeShop.Price" parent="TextAppearance.CoffeeShop.Subtitle1">
        <item name="android:textColor">@color/primary</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearance.CoffeeShop.ProductName" parent="TextAppearance.CoffeeShop.Subtitle1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.CoffeeShop.Rating" parent="TextAppearance.CoffeeShop.Caption">
        <item name="android:textColor">@color/rating_gold</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.CoffeeShop.Badge" parent="TextAppearance.CoffeeShop.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.CoffeeShop.Tab" parent="TextAppearance.CoffeeShop.Button">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.CoffeeShop.Tab.Selected" parent="TextAppearance.CoffeeShop.Tab">
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>
